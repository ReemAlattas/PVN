<h1>Listing Companies</h1>
<%= link_to 'New company', new_company_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Contact Name</th>
    <th>Contact Email</th>
    <th>Contact Phone</th>
    <th>Bio</th>
    <th>Video</th>
    <th>Logo</th>

    <th colspan="3"></th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.website %></td>
      <td><%= company.contactName %></td>
      <td><%= company.contactEmail %></td>
      <td><%= company.contactPhone %></td>
      <td><%= company.bio %></td>
      <td><%= company.video %></td>
      <td><%= link_to 'Logo', company.logo.url %></td>
    
      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company_path(company),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
